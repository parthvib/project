<form action="<%= submitPath %>?_csrf=<%=locals.csrftoken %>" method="POST" enctype="multipart/form-data">
    <!-- <input hidden does not work csurf token as the enctype is mutlipart so  -->

    <p>
        <label for="title">Title </label>
        <input type="text" id="title" name="title" value="<%= product.title %>" required>
    </p>

    <div id="image-upload-control">

        <p>
            <label for="image">Image</label>
            <input type="file" id="image" name="image" accept="/image/png,image/jpg,image/jpeg" <% if(imageRequired){ %>required <% } %>>
        </p>

        <img src="" alt="Selected image">

    </div>

    <p>
        <label for="summary">Summary</label>
        <input type="text" id="summary" name="summary" value="<%= product.summary %>" required maxlength="250">

    </p>
    <p>
        <label for="price">Price</label>
        <input type="number" id="price" name="price" value="<%= product.price %>" required step="0.01">
    </p>
    <p>
        <label for="description">Description</label>
        <textarea id="description" name="description" rows="7" cols="85" ><%= product.description %></textarea>
    </p>
    <p>
        <button type="reset" class="btn btn-alt ">Reset</button>
        <button class="btn">Save</button>
    </p>
</form>