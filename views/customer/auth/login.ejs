<%-include('../../shared/includes/head',{pagetitle:'Login'}) %>
    <!--this '-' takes some code and does not escapes it we want to take a raw html code and parse it-->
    <!--this will title in header ejs-->
    <link rel="stylesheet" href="styles/form.css">
    <link rel="stylesheet" href="styles/auth.css">
    </head>
    <!--this two css links are given here to fetch that amount of css code only-->
    <!--head that was opened in header.ejs-->

    <body>
        <%- include('../../shared/includes/header')%>
        <main >
            <h1>
                Login
            </h1>

            <% if (inputData.errorMessage) { %>
            
                <section class="alert">
                    <h2>Invalid Credentials</h2>
                    <p>
                        <%= inputData.errorMessage %>
                    </p> </section>  
                    <% } %>
            <form action="/login" method="POST">
                <input type="hidden" name="_csrf" value="<%= locals.csrftoken%>">
                <p>
                    <label for="email">E-mail</label>
                    <input type="email" id="email" name="email" value="<%= inputData.email%>" required>
                </p>
                
                <p>
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password"  value="<%= inputData.password%>" required>
                </p>
                
                     
<button class="btn">
    Login
</button>

<p id="switch-form"><a href="/signup">Signup instead</a></p>
         </form>
        </main>
    </body>
</html>

