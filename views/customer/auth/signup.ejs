<%-include('../../shared/includes/head',{pagetitle:'signup'}) %>
    <!--this '-' takes some code and does not escapes it we want to take a raw html code and parse it-->
    <!--this will title in header ejs-->
    <link rel="stylesheet" href="styles/form.css">
    <link rel="stylesheet" href="styles/auth.css">
    </head>
    <!--this two css links are given here to fetch that amount of css code only-->
    <!--head that was opened in header.ejs-->

    <body>
        <%- include('../../shared/includes/header')%>
        <main >
            <h1>
                Create a new account
            </h1>
            <% if (inputData.errorMessage) { %>
            
            <section class="alert">
                <h2>Invalid input</h2>
                <p>
                    <%= inputData.errorMessage %>
                </p> </section>  
                <% } %>   
            <form action="/signup" method="POST">
                <input type="hidden" name="_csrf" value="<%=locals.csrftoken %>" >
                <!--we are using this field as a hidden field because we dont want user to enter any value 
                but instead it is already filled with data and we are using ejs in value because that value is  
                is generated in csrf-token.ejs
                -->
                <p>
                    <label for="email">E-mail</label>
                    <input type="email" id="email" name="email"  value="<%= inputData.email %>" required>
                </p>
                <p>
                    <label for="confirm-email"> Confirm Email</label>
                    <input type="email" id="confirm-email" name="confirm-email" value="<%= inputData.confirmEmail %>" required>
                </p>

                <p>
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" minlength="6" value="<%= inputData.password %>" required>
                </p>
                <hr>
                <p> 
                    <label for="fullname">Full name </label>
                    <input type="text" id="fullname" name="fullname" value="<%= inputData.fullname %>" required>
                </p>

                <p> 
                    <label for="phno">Phone no</label>
                    <input type="text" id="phno" name="phno" value="<%= inputData.phno %>" required>
                </p>

                <p>
                    <label for="street">Street</label>
                    <input type="text" id="street" name="street" value="<%= inputData.street %>" required>
                </p>

                <p>
                    <label for="postal">Postal Code</label>
                    <input type="text"
                     id="postal" 
                     name="postal" 
                     minlength="5" 
                     maxlength="5" 
                     value="<%= inputData.postal %>"
                     required>
                </p>

                <p>
                    <label for="city"  value="<%= inputData.city %>">City</label>
                    <input type="text" id="city" name="city" required>
                </p>
<button class="btn">
    Create Account
</button>

<p id="switch-form"><a href="/login">Login instead</a></p>
         </form>
        </main>
        <%-include('../../shared/includes/footer')%>